<!-- Your cards code -->
<div class="wrapper-grey">
  <h2 class="text-center">Your next trip</h2>
  <div class="container">
    <div class="row">
      <% data.flats.each do |member, infos|%>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= "images/#{infos.background}"%>)">
            <h2 class="card-title"><%= infos.city %></h2>
            <h2 class="card-subtitle"><%= member.capitalize %>'s place</h2>
            <p class="card-text"><%= infos.description %></p>
            <%= image_tag infos.avatar, class: "avatar-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


